<div class="bg-white rounded-lg shadow-md p-4 border-2 border-gray-200 mb-4">
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-2xl font-semibold"><%= album.name %></h2>
    <div class="flex space-x-2">
      <button class="bg-green-500 text-white px-2 py-1 rounded-sm hover:bg-green-600">Publish</button>
      <button class="bg-blue-500 text-white px-2 py-1 rounded-sm hover:bg-blue-600">Edit</button>
      <button class="bg-red-500 text-white px-2 py-1 rounded-sm hover:bg-red-600">Delete</button>
    </div>
  </div>
  <div class="flex items-center mb-2">
    <img src="album_cover.jpg" alt="Album Cover" class="w-24 h-24 rounded-sm mr-4">
    <p class="text-gray-700">15:27</p>
  </div>
  <ul class="list-disc">
    <li class="flex items-center mb-2">
      <p class="mr-2">Track 1</p>
      <p class="text-gray-700">04:16</p>
    </li>
  </ul>
</div>
